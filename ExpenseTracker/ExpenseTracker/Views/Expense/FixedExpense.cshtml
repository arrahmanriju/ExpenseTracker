@model IEnumerable<ExpenseTracker.Models.Transaction>

@{
    ViewData["Title"] = "Fixed Expenses";
}

<div class="container-fluid">
    <h1 class="page-title">
        <i class="fas fa-sync-alt"></i> Fixed Expenses
    </h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-12">
            <a asp-controller="Expense" asp-action="AddExpense" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Fixed Expense
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="overview-card">
                <h3 style="margin-bottom: 20px;">
                    <i class="fas fa-list"></i> All Fixed/Recurring Expenses
                </h3>

                @if (Model != null && Model.Any())
                {
                    var totalFixed = Model.Sum(t => t.Amount);
                    
                    <div class="alert alert-info mb-4">
                        <strong>Total Monthly Fixed Expenses:</strong> ৳ @totalFixed.ToString("N2")
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th>Description</th>
                                    <th>Start Date</th>
                                    <th class="text-end">Amount</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var expense in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-secondary">@expense.Category</span>
                                        </td>
                                        <td>@(expense.Description ?? "-")</td>
                                        <td>@expense.Date.ToString("MMM dd, yyyy")</td>
                                        <td class="text-end">
                                            <strong style="color: #e74c3c;">৳ @expense.Amount.ToString("N2")</strong>
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="DeleteFixedExpense" asp-route-id="@expense.TransactionId" 
                                               class="btn btn-sm btn-danger" 
                                               onclick="return confirm('Are you sure you want to delete this fixed expense?');">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No fixed expenses yet. Add your recurring monthly expenses like rent, subscriptions, etc.
                    </div>
                    <a asp-controller="Expense" asp-action="AddExpense" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add Your First Fixed Expense
                    </a>
                }
            </div>
        </div>
    </div>
</div>
