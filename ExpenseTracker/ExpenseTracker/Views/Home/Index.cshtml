@{
    ViewData["Title"] = "Overview";
}

<div class="container-fluid">
    <h1 class="page-title">
        <i class="fas fa-chart-line"></i> Overview
    </h1>

    <!-- Summary Cards Row -->
    <div class="row">
        <!-- Total Income Card -->
        <div class="col-md-4">
            <div class="overview-card income-card">
                <div class="card-icon">
                    <i class="fas fa-arrow-up"></i>
                </div>
                <p class="card-title">Total Income (This Month)</p>
                <h2 class="card-value">@ViewBag.CurrencySymbol @ViewBag.TotalIncome.ToString("N2")</h2>
                @if (ViewBag.LastMonthIncome > 0)
                {
                    <small style="color: #7f8c8d;">
                        Last month: @ViewBag.CurrencySymbol @ViewBag.LastMonthIncome.ToString("N2")
                        @if (ViewBag.IncomeChange > 0)
                        {
                            <span style="color: #27ae60;">
                                <i class="fas fa-arrow-up"></i> +@ViewBag.IncomeChange.ToString("F1")%
                            </span>
                        }
                        else if (ViewBag.IncomeChange < 0)
                        {
                            <span style="color: #e74c3c;">
                                <i class="fas fa-arrow-down"></i> @ViewBag.IncomeChange.ToString("F1")%
                            </span>
                        }
                    </small>
                }
            </div>
        </div>

        <!-- Total Expense Card -->
        <div class="col-md-4">
            <div class="overview-card expense-card">
                <div class="card-icon">
                    <i class="fas fa-arrow-down"></i>
                </div>
                <p class="card-title">Total Expense (This Month)</p>
                <h2 class="card-value">@ViewBag.CurrencySymbol @ViewBag.TotalExpense.ToString("N2")</h2>
                @if (ViewBag.LastMonthExpense > 0)
                {
                    <small style="color: #7f8c8d;">
                        Last month: @ViewBag.CurrencySymbol @ViewBag.LastMonthExpense.ToString("N2")
                        @if (ViewBag.ExpenseChange > 0)
                        {
                            <span style="color: #e74c3c;">
                                <i class="fas fa-arrow-up"></i> +@ViewBag.ExpenseChange.ToString("F1")%
                            </span>
                        }
                        else if (ViewBag.ExpenseChange < 0)
                        {
                            <span style="color: #27ae60;">
                                <i class="fas fa-arrow-down"></i> @ViewBag.ExpenseChange.ToString("F1")%
                            </span>
                        }
                    </small>
                }
            </div>
        </div>

        <!-- Balance Card -->
        <div class="col-md-4">
            <div class="overview-card balance-card">
                <div class="card-icon">
                    <i class="fas fa-wallet"></i>
                </div>
                <p class="card-title">Balance</p>
                <h2 class="card-value">@ViewBag.CurrencySymbol @ViewBag.Balance.ToString("N2")</h2>
                <small style="color: #7f8c8d;">
                    Savings Rate: 
                    <strong style="color: @(ViewBag.SavingsRate > 20 ? "#27ae60" : ViewBag.SavingsRate > 0 ? "#f39c12" : "#e74c3c")">
                        @ViewBag.SavingsRate.ToString("F1")%
                    </strong>
                </small>
            </div>
        </div>
    </div>

    <!-- Spending Alert -->
    @if (!string.IsNullOrEmpty(ViewBag.SpendingAlert))
    {
        <div class="row mt-3">
            <div class="col-12">
                <div class="alert @(ViewBag.ExpenseChange > 20 ? "alert-warning" : ViewBag.ExpenseChange > 0 ? "alert-info" : "alert-success") alert-dismissible fade show" role="alert">
                    @ViewBag.SpendingAlert
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        </div>
    }

    <!-- Quick Stats Row -->
    <div class="row mt-3">
        <div class="col-md-6">
            <div class="overview-card" style="padding: 15px;">
                <h6><i class="fas fa-chart-bar"></i> Quick Stats</h6>
                <ul style="margin: 10px 0; padding-left: 20px; font-size: 0.9rem;">
                    @if (ViewBag.HighestCategory != null)
                    {
                        <li>Highest Expense: <strong>@ViewBag.HighestCategory.Category</strong> (@ViewBag.CurrencySymbol @ViewBag.HighestCategory.Amount.ToString("N2"))</li>
                    }
                    else
                    {
                        <li>No expenses this month</li>
                    }
                    <li>Average Daily Spending: <strong>@ViewBag.CurrencySymbol @((ViewBag.TotalExpense / DateTime.Now.Day).ToString("N2"))</strong></li>
                    <li>Total Transactions: <strong>@ViewBag.RecentTransactions.Count</strong> recent</li>
                </ul>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="overview-card" style="padding: 15px;">
                <h6><i class="fas fa-bolt"></i> Quick Actions</h6>
                <div class="d-flex gap-2 mt-2">
                    <a asp-controller="Expense" asp-action="AddExpense" class="btn btn-sm btn-danger flex-fill">
                        <i class="fas fa-minus-circle"></i> Add Expense
                    </a>
                    <a asp-controller="Income" asp-action="Index" class="btn btn-sm btn-success flex-fill">
                        <i class="fas fa-plus-circle"></i> Add Income
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row mt-4">
        <!-- Income vs Expense Bar Chart -->
        <div class="col-md-6">
            <div class="overview-card">
                <h3 style="margin-bottom: 20px;">
                    <i class="fas fa-chart-bar"></i> Income vs Expense
                </h3>
                <canvas id="incomeExpenseChart" style="max-height: 250px;"></canvas>
            </div>
        </div>

        <!-- Expense by Category Doughnut Chart -->
        <div class="col-md-6">
            <div class="overview-card">
                <h3 style="margin-bottom: 20px;">
                    <i class="fas fa-chart-pie"></i> Expense by Category
                </h3>
                @if (ViewBag.ExpenseByCategory != null && ViewBag.ExpenseByCategory.Count > 0)
                {
                    <canvas id="expenseCategoryChart" style="max-height: 250px;"></canvas>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No expense data yet. Start adding expenses to see the breakdown!
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Monthly Trend Line Chart -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="overview-card">
                <h3 style="margin-bottom: 20px;">
                    <i class="fas fa-chart-line"></i> 6-Month Trend
                </h3>
                <canvas id="monthlyTrendChart" style="max-height: 200px;"></canvas>
            </div>
        </div>
    </div>

    <!-- Recent Transactions Section -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="overview-card">
                <h3 style="margin-bottom: 20px;">
                    <i class="fas fa-history"></i> Recent Transactions
                </h3>

                @if (ViewBag.RecentTransactions != null && ViewBag.RecentTransactions.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Type</th>
                                    <th>Category</th>
                                    <th>Description</th>
                                    <th class="text-end">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var transaction in ViewBag.RecentTransactions)
                                {
                                    <tr>
                                        <td>@transaction.Date.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @if (transaction.Type == "Income")
                                            {
                                                <span class="badge bg-success">Income</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Expense</span>
                                            }
                                        </td>
                                        <td>@transaction.Category</td>
                                        <td>@(transaction.Description ?? "-")</td>
                                        <td class="text-end">
                                            <strong style="color: @(transaction.Type == "Income" ? "#27ae60" : "#e74c3c")">
                                                @ViewBag.CurrencySymbol @transaction.Amount.ToString("N2")
                                            </strong>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No transactions yet. Start by adding your first income or expense!
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        var currencySymbol = '@Html.Raw(ViewBag.CurrencySymbol)';

        function formatCurrency(value) {
            if (value >= 1000000) {
                return currencySymbol + (value / 1000000).toFixed(1) + 'M';
            } else if (value >= 1000) {
                return currencySymbol + (value / 1000).toFixed(0) + 'K';
            }
            return currencySymbol + value.toFixed(0);
        }

        // Income vs Expense Bar Chart
        const incomeExpenseCtx = document.getElementById('incomeExpenseChart');
        if (incomeExpenseCtx) {
            new Chart(incomeExpenseCtx, {
                type: 'bar',
                data: {
                    labels: ['Income', 'Expense'],
                    datasets: [{
                        label: 'Amount',
                        data: [@ViewBag.TotalIncome, @ViewBag.TotalExpense],
                        backgroundColor: [
                            'rgba(39, 174, 96, 0.8)',
                            'rgba(231, 76, 60, 0.8)'
                        ],
                        borderColor: [
                            'rgba(39, 174, 96, 1)',
                            'rgba(231, 76, 60, 1)'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return 'Amount: ' + currencySymbol + context.parsed.y.toLocaleString();
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return formatCurrency(value);
                                },
                                font: { size: 10 },
                                maxTicksLimit: 5
                            }
                        },
                        x: {
                            ticks: { font: { size: 12 } }
                        }
                    }
                }
            });
        }

        @if (ViewBag.ExpenseByCategory != null && ViewBag.ExpenseByCategory.Count > 0)
        {
            <text>
        const expenseCategoryCtx = document.getElementById('expenseCategoryChart');
        if (expenseCategoryCtx) {
            const categoryData = @Html.Raw(Json.Serialize(ViewBag.ExpenseByCategory));
            
            new Chart(expenseCategoryCtx, {
                type: 'doughnut',
                data: {
                    labels: categoryData.map(item => item.category),
                    datasets: [{
                        data: categoryData.map(item => item.amount),
                        backgroundColor: [
                            'rgba(231, 76, 60, 0.8)',
                            'rgba(52, 152, 219, 0.8)',
                            'rgba(241, 196, 15, 0.8)',
                            'rgba(155, 89, 182, 0.8)',
                            'rgba(26, 188, 156, 0.8)',
                            'rgba(230, 126, 34, 0.8)',
                            'rgba(149, 165, 166, 0.8)',
                            'rgba(192, 57, 43, 0.8)'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right',
                            labels: { font: { size: 11 } }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.label + ': ' + currencySymbol + context.parsed.toLocaleString();
                                }
                            }
                        }
                    }
                }
            });
        }
            </text>
        }

        // Monthly Trend Line Chart
        const monthlyTrendCtx = document.getElementById('monthlyTrendChart');
        if (monthlyTrendCtx) {
            const monthlyData = @Html.Raw(Json.Serialize(ViewBag.MonthlyData));
            
            new Chart(monthlyTrendCtx, {
                type: 'line',
                data: {
                    labels: monthlyData.map(item => item.month),
                    datasets: [
                        {
                            label: 'Income',
                            data: monthlyData.map(item => item.income),
                            borderColor: 'rgba(39, 174, 96, 1)',
                            backgroundColor: 'rgba(39, 174, 96, 0.1)',
                            tension: 0.4,
                            fill: true
                        },
                        {
                            label: 'Expense',
                            data: monthlyData.map(item => item.expense),
                            borderColor: 'rgba(231, 76, 60, 1)',
                            backgroundColor: 'rgba(231, 76, 60, 0.1)',
                            tension: 0.4,
                            fill: true
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                            labels: { font: { size: 12 } }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ' + currencySymbol + context.parsed.y.toLocaleString();
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return formatCurrency(value);
                                },
                                font: { size: 10 },
                                maxTicksLimit: 5
                            }
                        },
                        x: {
                            ticks: {
                                maxRotation: 45,
                                minRotation: 0,
                                font: { size: 10 }
                            }
                        }
                    }
                }
            });
        }
    </script>
}
