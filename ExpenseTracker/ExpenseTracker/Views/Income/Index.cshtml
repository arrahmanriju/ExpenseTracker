@model IEnumerable<ExpenseTracker.Models.Transaction>

@{
    ViewData["Title"] = "Income";
}

<div class="container-fluid">
    <h1 class="page-title">
        <i class="fas fa-dollar-sign"></i> Income
    </h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Add Income Form -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="overview-card">
                <h3 style="margin-bottom: 20px;">
                    <i class="fas fa-plus-circle"></i> Add New Income
                </h3>
                <form asp-action="AddIncome" method="post">
                    <input type="hidden" name="Type" value="Income" />
                    
                    <div class="row">
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="Category" class="form-label">Category</label>
                                <select name="Category" class="form-select" required>
                                    <option value="">-- Select Category --</option>
                                    <option value="Salary">Salary</option>
                                    <option value="Business">Business</option>
                                    <option value="Freelance">Freelance</option>
                                    <option value="Investment">Investment</option>
                                    <option value="Gift">Gift</option>
                                    <option value="Bonus">Bonus</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="Amount" class="form-label">Amount (@ViewBag.CurrencySymbol)</label>
                                <input name="Amount" class="form-control" type="number" step="0.01" min="0" placeholder="Enter amount" required />
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="Date" class="form-label">Date</label>
                                <input name="Date" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label">&nbsp;</label>
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="fas fa-plus"></i> Add Income
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3">
                                <label for="Description" class="form-label">Description (Optional)</label>
                                <input name="Description" class="form-control" type="text" placeholder="Add notes about this income" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Income by Category -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="overview-card">
                <h3 style="margin-bottom: 20px;">
                    <i class="fas fa-chart-pie"></i> Income by Category
                </h3>
                
                @if (ViewBag.IncomeByCategory != null && ViewBag.IncomeByCategory.Count > 0)
                {
                    <div class="alert alert-success mb-3">
                        <strong>Total Income:</strong> @ViewBag.CurrencySymbol @ViewBag.TotalIncome.ToString("N2")
                    </div>

                    <div class="row">
                        @foreach (var item in ViewBag.IncomeByCategory)
                        {
                            var percentage = ViewBag.TotalIncome > 0 ? (item.Total / ViewBag.TotalIncome * 100) : 0;
                            <div class="col-md-4 mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">@item.Category</h5>
                                        <p class="card-text">
                                            <strong style="color: #27ae60; font-size: 1.3rem;">@ViewBag.CurrencySymbol @item.Total.ToString("N2")</strong><br />
                                            <small class="text-muted">@item.Count transaction(s) Â· @percentage.ToString("F1")%</small>
                                        </p>
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: @percentage%" aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No income categories yet. Add your first income above!
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- All Income List -->
    <div class="row">
        <div class="col-12">
            <div class="overview-card">
                <h3 style="margin-bottom: 20px;">
                    <i class="fas fa-list"></i> All Income Entries
                </h3>

                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Category</th>
                                    <th>Description</th>
                                    <th class="text-end">Amount</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var income in Model)
                                {
                                    <tr>
                                        <td>@income.Date.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <span class="badge bg-success">@income.Category</span>
                                        </td>
                                        <td>@(income.Description ?? "-")</td>
                                        <td class="text-end">
                                            <strong style="color: #27ae60;">@ViewBag.CurrencySymbol @income.Amount.ToString("N2")</strong>
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="DeleteIncome" asp-route-id="@income.TransactionId" 
                                               class="btn btn-sm btn-danger" 
                                               onclick="return confirm('Are you sure you want to delete this income?');">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No income entries yet. Add your first income using the form above!
                    </div>
                }
            </div>
        </div>
    </div>
</div>
