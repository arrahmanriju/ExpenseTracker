@model ExpenseTracker.Models.Transaction

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <h4>Validation Errors:</h4>
        <ul>
            @foreach (var modelState in ViewData.ModelState)
            {
                foreach (var error in modelState.Value.Errors)
                {
                    <li><strong>@modelState.Key:</strong> @error.ErrorMessage @error.Exception?.Message</li>
                }
            }
        </ul>
    </div>
}

@{
    ViewData["Title"] = "Add Expense";
}

<div class="container-fluid">
    <h1 class="page-title">
        <i class="fas fa-plus-circle"></i> Add Expense
    </h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="overview-card">
                <form asp-action="AddExpense" method="post">
                    <input type="hidden" asp-for="Type" value="Expense" />
                    <div class="mb-3">
                        <label asp-for="Category" class="form-label">Category</label>
                        <select asp-for="Category" class="form-select" required>
                            <option value="">-- Select Category --</option>
                            <option value="Food">Food</option>
                            <option value="Transport">Transport</option>
                            <option value="Shopping">Shopping</option>
                            <option value="Entertainment">Entertainment</option>
                            <option value="Health">Health</option>
                            <option value="Education">Education</option>
                            <option value="Bills">Bills</option>
                            <option value="Rent">Rent</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Amount" class="form-label">Amount (à§³)</label>
                        <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0" placeholder="Enter amount" required />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Date" class="form-label">Date</label>
                        <input asp-for="Date" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description (Optional)</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Add notes about this expense"></textarea>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsFixed" class="form-check-input" type="checkbox" />
                        <label asp-for="IsFixed" class="form-check-label">
                            This is a fixed/recurring expense (e.g., monthly rent, subscriptions)
                        </label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save"></i> Add Expense
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Overview
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
